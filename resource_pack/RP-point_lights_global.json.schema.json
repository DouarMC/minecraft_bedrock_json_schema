{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "description": "Ce fichier sert à configurer les points lumineux dans le jeu, c'est-à-dire des blocs qui émettent de la lumière depuis un point central.",
    "required": ["format_version"],
    "properties": {
        "format_version": {
            "description": "La version du Format à utiliser.",
            "$ref": "../common.schema.json#/definitions/minecraft_version",
            "examples": ["1.21.50"]
        }
    },
    "allOf": [
        {
            "if": {
                "properties": {
                    "format_version": {
                        "const": "1.21.50"
                    }
                }
            },
            "then": {
                "$ref": "../format_version/1.21.50/RP-point_lights_global.json.schema.json"
            }
        }
    ]
}